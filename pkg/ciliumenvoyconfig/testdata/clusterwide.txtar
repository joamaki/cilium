# Start with clean state.
cmp_cec cec_empty.table
cmp_services services_empty.table

# Set up the services and endpoints
upsert_service service.yaml
upsert_endpoints endpointslice.yaml
cmp_services -wait=1s services.table

# Add the CiliumClusterwideEnvoyConfig and wait for ingestion.
upsert_cec ccec.yaml
cmp_cec -wait=1s cec.table

# Check updates towards envoy.
cmp_envoy_update 1 L:/envoy-lb-listener-2/envoy-lb-listener-2/1000 EP:
cmp_envoy_upsert 1 L: EP:test/echo2:*=10.244.1.2:8081,test/echo2=10.244.1.2:8081

# Check that both services are now redirected to proxy.
cmp_services -wait=1s services_redirected.table

# Test the processing other way around, with service
# after CEC.
delete_service service.yaml
delete_endpoints endpointslice.yaml
cmp_services -wait=1s services_empty.table
# On deletion the endpoints are removed.
cmp_envoy_upsert 2 L: EP:test/echo2:*=,test/echo2=

upsert_service service.yaml
upsert_endpoints endpointslice.yaml
cmp_services -wait=1s services_redirected.table
cmp_envoy_upsert 3 L: EP:test/echo2:*=10.244.1.2:8081,test/echo2=10.244.1.2:8081

# Cleanup CECs
delete_cec ccec.yaml
cmp_services -wait=1s services.table
cmp_cec cec_empty.table

# Listener is deleted
cmp_envoy_delete 1 L:/envoy-lb-listener-2/envoy-lb-listener-2/1000 EP:

# Cleanup the rest
delete_service service.yaml
delete_endpoints endpointslice.yaml

cmp_services -wait=1s services_empty.table

