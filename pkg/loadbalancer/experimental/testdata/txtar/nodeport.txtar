db tables

# Wait until tables are initialized by the reflector (e.g. Watch() called)
lb initialized

# Upsert services and endpoint slices and wait for reflection
k8s add service.yaml endpointslice.yaml
db cmp services service.table
db cmp frontends frontends.table
db cmp backends backends.table

# Check BPF maps
lb reconciled
lb writemaps actual.maps
cmp actual.maps expected.maps

# Check that the expected jobs exist and they're healthy.
db cmp -grep=^test health health.table

# Delete and check cleanup.
k8s delete service.yaml endpointslice.yaml
db cmp services service_empty.table
lb reconciled
lb writemaps actual.maps
cmp actual.maps empty.maps

# Finally check that no errors occurred in reconciliation.
metrics -prefix=cilium_reconciler_errors metrics.out
cmp metrics.out metrics.expected

